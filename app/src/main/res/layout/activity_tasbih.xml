<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/digital_tajbih_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/tranparent_toolbar_bg"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        >


        <FrameLayout
            android:id="@+id/frameTajbih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/counterButton"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/tajbih_bg"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"

                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/pressedLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameTajbih"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="70dp">

            <TextView
                android:id="@+id/pressButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/tajbih_button"
                android:gravity="center"
                android:text="চাপুন"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"

                />

            <TextView
                android:id="@+id/tryAgainButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/label_bg"
                android:gravity="center"
                android:text="পুনরায়"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"

                />
        </LinearLayout>


    </RelativeLayout>

